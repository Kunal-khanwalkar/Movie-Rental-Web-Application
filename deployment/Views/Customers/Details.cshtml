@model MyWebApp.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer details</h2>

<ul class="list-group">
    <li class="list-group-item">MembershipType: @Model.MembershipType.Name</li>
    @if (Model.birthdate != null)
    {
    <li class="list-group-item">Birthday: @Model.birthdate.Value.ToShortDateString()</li>
    }
</ul>